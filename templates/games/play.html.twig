{% extends 'layout.html.twig' %}

{% block title %}{{ label }} - Partida{% endblock %}

{% block content %}
    <h1 class="text-center mb-4">{{ label }}</h1>
    <p class="text-center lead">Â¡Resuelve las siguientes operaciones!</p>

    <form class="col-md-6 mx-auto">
        {% for operation in operations %}
            <div class="mb-3">
                <label class="form-label fs-5" for="answer_{{ loop.index }}">{{ operation.first_operand }} {{ operation_symbol }} {{ operation.second_operand }} = </label>
                <input type="number" class="form-control" name="answer_{{ loop.index }}" required>
            </div>
        {% endfor %}

        <div class="d-grid">
            <button type="submit" class="btn btn-success btn-lg">Corregir</button>
        </div>
    </form>
{% endblock %}
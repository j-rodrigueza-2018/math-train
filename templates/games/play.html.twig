{% extends 'layout.html.twig' %}

{% block title %}{{ label }} - Pregunta {{ question_index }}{% endblock %}

{% block content %}
    <h1 class="text-center mb-4">{{ label }}</h1>
    <p class="text-center lead">Pregunta {{ question_index }} de {{ total_count }}</p>

    <form class="col-md-6 mx-auto" method="get" action="/games/{{ operation }}/submit">
        <input type="hidden" name="question_index" value="{{ question_index }}">
        <input type="hidden" name="operation" value="{{ operation }}">

        <div class="mb-3 text-center fs-4">
            <label class="form-label" for="answer">
                {{ first_operand }} {{ operation_symbol }} {{ second_operand }} =
            </label>
        </div>

        <div class="mb-3">
            <input type="number" name="answer" id="answer" class="form-control form-control-lg"
                   value="{{ answer }}" autofocus>
        </div>

        <div class="d-flex justify-content-between mt-4">
            {% if prev_index %}
                <button type="submit" name="next_action" value="prev" class="btn btn-outline-secondary">
                    ← Anterior
                </button>
            {% else %}
                <span></span>
            {% endif %}

            {% if next_index %}
                <button type="submit" name="next_action" value="next" class="btn btn-outline-primary">
                    Siguiente →
                </button>
            {% else %}
                <button type="submit" name="next_action" value="finish" class="btn btn-success">
                    Finalizar
                </button>
            {% endif %}
        </div>
    </form>
{% endblock %}